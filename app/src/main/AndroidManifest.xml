<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chhaichivon.mvp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVP">
        <activity android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.user.UserActivity" />
        <activity android:name=".ui.photo.PhotoDetailActivity" />
        <activity android:name=".ui.photo.PhotoActivity" />
        <activity android:name=".ui.post.PostDetailActivity" />
        <activity android:name=".ui.post.PostActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>